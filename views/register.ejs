<% include ./partials/header.ejs %>

<div
  class="w-full h-screen bg-[url('https://images.unsplash.com/photo-1576266394503-4999348b5447?q=80&w=1472&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')]"
>
  <div
    class="relative w-full h-screen flex justify-center items-center backdrop-brightness-50"
  >
    <div class="w-96 h-[48vw] bg-white rounded-3xl drop-shadow-2xl">
      <div class="flex flex-col justify-center items-center p-2">
        <img
          class="w-16 h-16"
          src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png"
          alt="pin"
        />
        <h1 class="text-2xl font-semibold">Create new account</h1>
        <form class="flex flex-col mt-5 w-72" action="/register" method="post">
          <label class="px-4 text-sm" for="name"
            >Username</label
          >
          <input
            class="border border-red-100 outline-red-400 rounded-xl m-2 px-2 py-2"
            type="text"
            name="username"
            id="username"
            placeholder="Username"
          />
          <label class="px-4 text-sm" for="name"
            >Name</label
          >
          <input
            class="border border-red-100 outline-red-400 rounded-xl m-2 px-2 py-2"
            type="text"
            name="fullname"
            id="fullname"
            placeholder="Fullname"
          />
          <label class="px-4 text-sm" for="contact">Contact</label>
          <input
            class="remove-arrow border border-red-100 outline-red-400 rounded-xl m-2 px-2 py-2"
            type="number"
            name="contact"
            id="contact"
            placeholder="Contact"
          />
          <label class="px-4 text-sm" for="email">Email</label>
          <input
            class="border border-red-100 outline-red-400 rounded-xl m-2 px-2 py-2"
            type="email"
            name="email"
            id="email"
            placeholder="Email"
          />
          <label class="px-4 text-sm" for="password">Password</label>
          <input
            class="border border-red-100 outline-red-400 rounded-xl m-2 px-2 py-2"
            type="password"
            name="password"
            id="password"
            placeholder="password"
          />
          <input
            class="bg-[#D50C22] rounded-full mt-3 py-2 text-white font-medium cursor-pointer"
            type="submit"
            value="Sign up"
          />
          <p class="text-[8px] p-3 text-center">
            By continuing, you agree to Pinterest's
            <span class="font-bold">Terms of Service</span>
            and acknowledge you've read our
            <span class="font-bold">Privacy Policy</span>
            <span class="font-bold">Notice at collection</span>.
          </p>
        </form>
        <a class="font-semibold text-sm" href="/"
          >Already a member ? Sign in.</a
        >
      </div>
    </div>
  </div>
</div>

<% include ./partials/footer.ejs %>
